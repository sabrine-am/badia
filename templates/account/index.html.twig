{% extends 'base.html.twig' %}

{% block title %}Mon compte!{% endblock %}

{% block body %}
    <h1> Mon compte </h1>
     {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('admin') }}"> vous êtes un admin, accéder au backoffice? </a><br/>
    {% endif %}
    bonjour bienvenu  {{app.user.firstname}} dans votre espace <br/>
         
         <div class="row">
            <div class="col-md-4">
                <div class="account-item text-center">
                    <img src="{{ asset('/assets/img/password.png') }}"  alt="Modifier password"><br/>
                    <a href="{{ path('account_password') }}"> Modifier mot passe </a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="account-item text-center">
                    <img src="{{ asset('/assets/img/pin.png') }}"  alt="Mes adresses"><br/>
                    <a href="{{ path('account_adress') }}"> Gérer mes adresses </a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="account-item text-center">
                    <img src="{{ asset('/assets/img/checkout.png') }}"  alt="Mes commandes"><br/>
                    <a href="#"> Gérer mes commandes </a>
                </div>
            </div>
         </div>
{% endblock %}
