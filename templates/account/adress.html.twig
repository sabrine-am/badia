{% extends 'base.html.twig' %}

{% block title %}Mes adresses!{% endblock %}

{% block body %}
<a href="{{ path('account_adress_add') }}" class="btn btn-info btn-sm float-right"> Ajouter une adresse</a>
    <h1> Mes adresses </h1>
         <a href="{{ path('account') }}"> retour </a><br/>
         {% if app.user.adresses | length == 0 %}
         <p class="text-center">
            Vous n'avez pas d'adresses , pour ajouter une <a href="{{ path('account_adress_add') }}">cliquez-ici</a>
        </p>
         {% else %}
            <div class="row">
                {% for adress in app.user.adresses %}
                    <div class="col-md-4">
                        <div class="card" style="width: 18rem;">
                        <div class="card-body">
                        <h5 class="card-title">{{adress.name}}</h5>
                        <p class="card-text">
                            {{adress.adress}}, <br/>
                            {{adress.codePostal}} - {{adress.city}} - {{adress.pays}}
                        </p>
                        <a href="{{ path('account_adress_edit', {'id' : adress.id}) }}">Modifier </a> | <a href="{{ path('account_adress_delete', {'id' : adress.id}) }}">Supprimer</a>
                        </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
         {% endif %}
{% endblock %}
